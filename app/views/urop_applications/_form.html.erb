<%= form_for(@urop_application) do |f| %>
  <!-- Modal -->
  <div class="modal fade" id="apply-modal<%=posting.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <%= f.hidden_field :supervisor_id, :value=>posting.supervisor.id %>
  <%= f.hidden_field :posting_id, :value=> posting.id %>
  <%= f.hidden_field :student_id, :value=>current_user.id %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">New Email</h4><br>
    <p class="modal-title">To: <%=posting.supervisor.email%></p><br>
    <p class="modal-title">From: <%=current_user.email%></p><br>
  </div>
  <div class="modal-body">
  <div class="field form-group">
    <%= f.label :message %> <p> This will be sent as a copy to the supervisor's email mailbox </p>
    <%= f.text_area :message %>
  </div>
  </div>
  <div class="modal-footer">
  <div class="actions">
    <%= f.submit "Submit application", :class=>"btn btn-default", :id=> "submit_button"%>
    <%= link_to "Back", postings_path, :class=>"btn btn-default", :id=> "back_button" %>
  </div>
  </div>
</div>
<% end %>