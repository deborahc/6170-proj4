<p id="notice"><%= notice %></p>
<div class="span3"></div>
<div class="profileHeader span8">
	<br></br>
	<div class="">
		<p>
		  <b>First Name:</b>
		  <%= @user.first_name %>
		</p>
		<p>
		  <b>Last Name:</b>
		  <%= @user.last_name %>
		</p>
		<p>
		  <b>Year:</b>
		  <%= @user.year %>
		</p>
		<p>
		  <b>Major:</b>
		  <%= @user.major %>
		</p>
	<div class="profileInfo">
		<h4>About <%=@user.first_name %></h4>
		<h5>Major: <%= @user.major %></h5>
		<h5>Year: <%= @user.year %></h5>
		<h5>Email Address: <%= @user.email %></h5>

		<% if !@user.resume.content_type.nil? %>
		<h5><%= link_to 'Resume', @user.resume.expiring_url %></h5>
		<% else %>
		<h5>No resume uploaded</h5>
 		<% end %>
	</div>
	<%= link_to 'Edit', edit_user_path(@user) %> |
	<%= link_to 'Back', postings_path %>
</div>



